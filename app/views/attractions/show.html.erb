<h1><%= @attraction.name %></h1>
<p>Ticket cost: <%= @attraction.tickets %></p>
<p>Nausa Rating: <%= @attraction.nausea_rating %></p>
<p>Happiness Rating: <%= @attraction.happiness_rating %></p>
<p>Min Height Required: <%= @attraction.min_height %></p>
<% if logged_in? && current_user.admin %>
<%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
<% elsif logged_in? %>
<form action="<%= ride_attraction_path(@attraction) %>" method="get">
<button type="submit">"Go on this ride"</button>
</form>
<% end %>
