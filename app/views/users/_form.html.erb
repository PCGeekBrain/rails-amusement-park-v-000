<%= form_for(@user) do |f| %>
  <%= f.text_field :name, placeholder: "Username" %><br />
  <%= f.password_field :password, placeholder: "Password" %><br />
  <%= f.number_field :nausea, placeholder: "Nausea"%><br />
  <%= f.number_field :happiness, placeholder: "Happiness" %><br />
  <%= f.number_field :tickets, placeholder: "Tickets" %><br />
  <%= f.number_field :height, placeholder: "Height (in inches)" %><br />
  <%= f.label :admin, "Park Administrator? " %>
  <%= f.check_box :admin %><br />
  <%= f.submit %>
<% end %>
